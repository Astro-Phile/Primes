{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug primes_par.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/primes_par.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",           // lldb for mac, gdb for linux
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
